	public void AfficheAnnonce(Annonce a) throws RemoteException {
		// TODO Auto-generated method stub
		 
		//menteur 
		if(a.type == "menteur"){
			System.out.println(a.joueur +" accuse " +ServeurImplem.getDerniereAnnonce.joueur + " de menteur !!");
			
		}
		
		//tout pile
		if(a.type == "toutpile"){
			System.out.println(a.joueur +" à decalré un tout pile !! ");

		}
		//sur enchere
		if(a.type == "encherir"){
			System.out.println(a.joueur+"à Annoncer " + a.nombre+" Dés de "+a.valeur);
		}
	}

